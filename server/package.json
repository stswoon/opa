{
    "name": "opa-boilerplate-server",
    "version": "0.0.1",
    "scripts": {
        "start": "node dist/server.js",
        "build": "npm run clear && tsc",
        "serve": "concurrently \"tsc --watch\" \"nodemon --delay 100ms dist/server.js --localMongo --disableMongo\"",
        "clear": "rimraf server/dist",
        "copyClientDist": "cd ../client/dist && copyfiles --verbose ./**/* ../../server/dist/public"
    },
    "dependencies": {
        "express": "^4.18.2",
        "express-ws": "^5.0.2",
        "mongoose": "^7.0.4",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/uuid": "^9.0.0",
        "@types/express": "^4.17.17",
        "@types/express-ws": "^3.0.1",
        "@types/node": "^14.0.0",
        "concurrently": "^8.0.1",
        "copyfiles": "^2.4.1",
        "mongo-unit": "^3.3.0",
        "nodemon": "^2.0.22",
        "typescript": "^5.0.4",
        "rimraf": "^5.0.0"
    }
}
